html
    head
        title Web Address of #{univ}
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet")
        style(type="text/css").
           li:hover {
                background-color: #c1d0e8
            }

    body(class='p-3')
        h1(class='text-center'  style='font-variant:small-caps') Web Page Address(es)
        each uni in universities
            h5(class='m-2') Web Address(es) Of #{uni.name} in #{uni.country}
            ol(class='list-group list-group-numbered p-3')
                each address in uni.web_pages
                    li(class='list-group-item')
                        strong #{address}                
        
