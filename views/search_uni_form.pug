html
    head
        title Search University
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet")

    body(class='p-3 text-center')
        div(class='m-5')
            h1 Search Universities In A Country
            form(action= 'search_uni', method= 'GET')
                label(class="form-label fs-4" for="name") Country Name:
                div(class='d-flex justify-content-center')
                    div(class='d-flex justify-content-center w-50')
                        input(type="text" class="form-control mb-2" placeholder="Enter country name" name='name')
                button(type='submit' class='btn btn-primary w-50') SEARCH UNIVERSITIES
